<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %boldMagenta(TrackSearch) [%11.11thread] %highlight(%-5level) [%28logger{26}] - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="io.sfrei.tracksearch" level="DEBUG" />
    <root level="TRACE">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>