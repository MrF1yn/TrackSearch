<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="OUTPUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%yellow(%date{dd.MM.yyyy HH:mm:ss.SSS, UTC}) %highlight(%-5level) %magenta([%-4.35thread]) %cyan([%logger{20}]) - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="DEBUG">
    <appender-ref ref="OUTPUT"/>
  </root>

</configuration>
